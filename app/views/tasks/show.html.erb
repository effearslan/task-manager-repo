<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><% if @task.completed %>
    <p><i class="far fa-check-square"></i> This task is completed</p>
    <% else %>
    <p><i class="far fa-square"></i> This task is not completed</p>
    <% end %>
<p><%= link_to "Back to list", tasks_path %></p>
<%= link_to "Edit Task", edit_task_path(@task) %>
